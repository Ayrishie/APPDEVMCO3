                    <div class="text-content">
                        <div class="building-name">{{this.buildingName}}</div>
                        <a href="/reservation/{{this.buildingID}}" class="reserve-button"><span>Reserve</span></a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

